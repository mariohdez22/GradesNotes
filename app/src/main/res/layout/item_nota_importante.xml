<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/WhiteBlue"
    app:cardUseCompatPadding="true"
    android:padding="0.2dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Uid de nota-->
            <TextView
                android:id="@+id/Id_nota_Item_I"
                android:text="@string/Id_nota_Item"
                android:visibility="gone"
                android:fontFamily="@font/opensans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--Uid de usuario-->
            <TextView
                android:id="@+id/Uid_Usuario_Item_I"
                android:text="@string/Uid_Usuario_Item"
                android:visibility="gone"
                android:fontFamily="@font/opensans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--Correo de usuario-->
            <TextView
                android:id="@+id/Correo_usuario_Item_I"
                android:text="@string/Correo_usuario_Item"
                android:visibility="gone"
                android:fontFamily="@font/opensans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--Titulo de la nota-->
            <TextView
                android:id="@+id/Titulo_Item_I"
                android:text="@string/Titulo_Item"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black700"
                android:fontFamily="@font/raleway_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--DescripciÃ³n de la nota-->
            <TextView
                android:id="@+id/Descripcion_Item_I"
                android:text="@string/Descripcion_Item"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black700"
                android:fontFamily="@font/opensans"
                android:layout_width="match_parent"
                android:layout_height="24dp"/>

            <!--Fecha de la nota-->
            <TextView
                android:id="@+id/Fecha_hora_registro_Item_I"
                android:text="@string/Fecha_Item"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black500"
                android:fontFamily="@font/opensans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--ESTADO DE LA NOTA-->
            <LinearLayout
                android:id="@+id/linearEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/Tarea_No_Finalizada_Item_I"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:scaleType="centerCrop"
                        android:background="#FFAC7F"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Tarea_Finalizada_Item_I"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:scaleType="centerCrop"
                        android:background="#7FFFB7"/>

                </androidx.cardview.widget.CardView>

                <!--Estado de la nota-->
                <TextView
                    android:id="@+id/Estado_Item_I"
                    android:text="@string/Estado_Item"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black700"
                    android:fontFamily="@font/opensans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!--Fecha de calendario-->
                <TextView
                    android:id="@+id/Fecha_Item_I"
                    android:text="@string/Fecha_Item"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/black600"
                    android:fontFamily="@font/opensans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>