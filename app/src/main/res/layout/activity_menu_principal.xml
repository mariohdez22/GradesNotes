<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteBlue"
    tools:context=".MenuPrincipal">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/PerfilToolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/red500"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
            tools:ignore="MissingConstraints"
            tools:ingnore="MissingConstrains" />

        -->

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="0dp"
            android:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/red400">

            <ProgressBar
                android:id="@+id/progressBarDatos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"/>

            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingStart="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Cambiar a gone -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardImgPerfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/imgPerfil"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/icon_perfil"
                            android:scaleType="centerCrop"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                
                <!--Datos-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:paddingStart="16dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/UidPrincipal"
                        android:text="@string/UidPrincipal"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/raleway_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- Cambiar a gone -->
                    <!--Nombres-->
                    <LinearLayout
                        android:id="@+id/linearNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:src="@drawable/icon_usuario"
                            android:layout_gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/NombresPrincipal"
                            android:text="@string/NombresPrincipal"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginBottom="2.5dp"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/raleway_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <!-- Cambiar a gone -->
                    <!--Correo-->
                    <LinearLayout
                        android:id="@+id/linearCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:src="@drawable/icon_email"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            app:tint="@color/white"/>

                        <TextView
                            android:id="@+id/CorreoPrincipal"
                            android:text="@string/CorreoPrincipal"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginStart="4dp"
                            android:layout_marginBottom="2.5dp"
                            android:fontFamily="@font/raleway_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <!-- Cambiar a gone -->
                    <!--VERIFICACIÃ“N-->
                    <LinearLayout
                        android:id="@+id/Linear_Verficacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <!--ICONO-->
                        <ImageView
                            android:id="@+id/iconVerify"
                            android:layout_width="18sp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="1dp"
                            android:src="@drawable/icon_verificacion"
                            />

                        <!---ESTADO-->
                        <TextView
                            android:id="@+id/VerificacionCuenta"
                            android:text="@string/EstadoCuentaPrincipal"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginBottom="2.5dp"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/raleway_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--Contenedor Principal-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Contenedor 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="0dp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/CardAgregar"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/white">

                    <!--Opcion 5-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:src="@drawable/icon_nota"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>

                        <TextView
                            android:textSize="16dp"
                            android:fontFamily="@font/raleway_medium"
                            android:text="@string/AgregarNotas"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/CardNotas"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardElevation="0dp">

                    <!--Opcion 5-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:src="@drawable/icon_lista"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>

                        <TextView
                            android:textSize="16dp"
                            android:fontFamily="@font/raleway_medium"
                            android:text="@string/ListarNotas"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!--Contenedor 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="0dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="0dp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/CardArchivados"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/white">

                    <!--Opcion 5-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:src="@drawable/icon_archivados"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>

                        <TextView
                            android:textSize="16dp"
                            android:fontFamily="@font/raleway_medium"
                            android:text="@string/Importante"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/CardPerfil"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardElevation="0dp">

                    <!--Opcion 5-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:src="@drawable/icon_contactos"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>

                        <TextView
                            android:textSize="16dp"
                            android:fontFamily="@font/raleway_medium"
                            android:text="@string/Contactos"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!--Contenedor 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="0dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/CardAcercaDe"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/white">

                    <!--Opcion 5-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:src="@drawable/icon_about"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>

                        <TextView
                            android:textSize="16dp"
                            android:fontFamily="@font/raleway_medium"
                            android:text="@string/AcercaDe"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/CardSalir"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:cardElevation="0dp">

                    <!--Opcion 5-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:src="@drawable/icon_door"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:tint="@color/red300"/>

                        <TextView
                            android:textSize="16dp"
                            android:fontFamily="@font/raleway_medium"
                            android:text="@string/CerrarSesion"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>