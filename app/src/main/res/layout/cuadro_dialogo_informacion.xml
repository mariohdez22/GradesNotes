<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/white"
        android:elevation="0dp">

        <LinearLayout
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_fileName="book.json"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_loop="true" />

            <TextView
                android:text="@string/Desarrollador"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/raleway_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black800"/>

            <TextView
                android:text="@string/CorreoSoporte"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/raleway_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black800"/>

            <TextView
                android:text="@string/Version"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/raleway_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black600"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/EntendidoInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/opensans"
                app:strokeColor="@color/red400"
                android:text="@string/EntendidoInfo"
                android:textColor="@color/red400"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                style="?attr/materialButtonOutlinedStyle"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>